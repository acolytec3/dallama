{
    "name": "pi-voice-assistant",
    "version": "1.0.0",
    "description": "Headless voice assistant for Raspberry Pi 4",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "dev": "tsx src/main.ts",
        "install-service": "sudo cp systemd/voice-assistant.service /etc/systemd/system/ && sudo systemctl daemon-reload",
        "enable-service": "sudo systemctl enable voice-assistant.service",
        "start-service": "sudo systemctl start voice-assistant.service",
        "stop-service": "sudo systemctl stop voice-assistant.service",
        "status-service": "sudo systemctl status voice-assistant.service"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "chalk": "^5.3.0",
        "dotenv": "^16.5.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.1",
        "tsx": "^4.7.0",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
